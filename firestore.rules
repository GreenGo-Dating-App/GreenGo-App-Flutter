rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================

    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if user is admin
    function isAdmin() {
      return isSignedIn() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ============================================================================
    // USERS COLLECTION
    // ============================================================================
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // ============================================================================
    // PROFILES COLLECTION
    // ============================================================================
    match /profiles/{profileId} {
      // Anyone signed in can read profiles (for discovery/matching)
      allow read: if isSignedIn();
      // Users can create/update/delete their own profile
      allow create: if isOwner(profileId);
      allow update: if isOwner(profileId);
      allow delete: if isOwner(profileId);
    }

    // ============================================================================
    // MATCHES COLLECTION
    // ============================================================================
    match /matches/{matchId} {
      // Authenticated users can read/write matches
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // ============================================================================
    // LIKES COLLECTION
    // ============================================================================
    match /likes/{likeId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if isSignedIn();
    }

    // ============================================================================
    // CONVERSATIONS COLLECTION
    // ============================================================================
    match /conversations/{conversationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false;

      // MESSAGES SUBCOLLECTION
      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn();
        allow delete: if isSignedIn();
      }
    }

    // ============================================================================
    // SUBSCRIPTIONS COLLECTION
    // ============================================================================
    match /subscriptions/{subscriptionId} {
      allow read: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    // ============================================================================
    // TRANSACTIONS COLLECTION (GreenGoCoins)
    // ============================================================================
    match /transactions/{transactionId} {
      allow read: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    // ============================================================================
    // REPORTS COLLECTION
    // ============================================================================
    match /reports/{reportId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if false;
    }

    // ============================================================================
    // BLOCKED USERS COLLECTION
    // ============================================================================
    match /blockedUsers/{blockId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if isSignedIn();
    }

    // ============================================================================
    // NOTIFICATIONS COLLECTION
    // ============================================================================
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // ============================================================================
    // COIN BALANCES COLLECTION
    // ============================================================================
    match /coin_balances/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if false;
    }

    // ============================================================================
    // COIN TRANSACTIONS COLLECTION
    // ============================================================================
    match /coin_transactions/{transactionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    // ============================================================================
    // USER LEVELS COLLECTION (Gamification/Leaderboard)
    // ============================================================================
    match /user_levels/{userId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if false;
    }

    // ============================================================================
    // GAMIFICATION COLLECTIONS
    // ============================================================================
    match /achievement_progress/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if false;
    }

    match /challenge_progress/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    match /xp_transactions/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    match /seasonal_events/{docId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // ============================================================================
    // ALBUM ACCESS COLLECTION
    // ============================================================================
    match /album_access/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // ============================================================================
    // SWIPES / DISCOVERY COLLECTION
    // ============================================================================
    match /swipes/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }

    match /discovery_queue/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // ============================================================================
    // CONVERSATION EXPIRY COLLECTION
    // ============================================================================
    match /conversation_expiry/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if false;
    }

    // ============================================================================
    // PHOTO LIKES COLLECTION
    // ============================================================================
    match /photo_likes/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if isSignedIn();
    }

    // ============================================================================
    // ANALYTICS COLLECTION (Admin only)
    // ============================================================================
    match /analytics/{document=**} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // ============================================================================
    // CATCH-ALL for any other collections used by the app
    // ============================================================================
    match /{document=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
  }
}
