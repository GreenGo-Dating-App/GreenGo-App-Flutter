rules_version = '2';

// ============================================================================
// DEVELOPMENT MODE - PERMISSIVE RULES FOR LOCAL FIREBASE EMULATOR
// ============================================================================
// NOTE: These rules are for LOCAL DEVELOPMENT ONLY!
// Production rules are backed up in firestore.rules.production
// Restore production rules before deploying to production Firebase
// ============================================================================

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ============================================================================
    // USERS COLLECTION - Simplified for development
    // ============================================================================
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // ============================================================================
    // PROFILES COLLECTION - Simplified for development
    // ============================================================================
    match /profiles/{profileId} {
      // Allow all access for development seeding (no auth required)
      allow read, write: if true;
    }

    // ============================================================================
    // MATCHES COLLECTION
    // ============================================================================
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // LIKES COLLECTION
    // ============================================================================
    match /likes/{likeId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // CONVERSATIONS COLLECTION
    // ============================================================================
    match /conversations/{conversationId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();

      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    // ============================================================================
    // SUBSCRIPTIONS COLLECTION
    // ============================================================================
    match /subscriptions/{subscriptionId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // TRANSACTIONS COLLECTION
    // ============================================================================
    match /transactions/{transactionId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // REPORTS COLLECTION
    // ============================================================================
    match /reports/{reportId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // BLOCKED USERS COLLECTION
    // ============================================================================
    match /blockedUsers/{blockId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // NOTIFICATIONS COLLECTION
    // ============================================================================
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // ANALYTICS COLLECTION
    // ============================================================================
    match /analytics/{document=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // ============================================================================
    // APP CONFIG COLLECTION - Version control, feature flags, remote config
    // ============================================================================
    // IMPORTANT: In production, write access should be restricted to admin only
    match /app_config/{configId} {
      // All users can read app config (needed for version checks)
      allow read: if true;
      // Only allow writes in development (restrict in production!)
      allow write: if true;
    }

    // ============================================================================
    // FEATURE FLAGS COLLECTION
    // ============================================================================
    match /feature_flags/{flagId} {
      allow read: if true;
      allow write: if true;  // Restrict in production!
    }

    // ============================================================================
    // CATCH-ALL: Allow all access in development (for seeding and testing)
    // ============================================================================
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
